<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="apps.educacion.numeros.aprendernumeros.Num51num60Activity"
    android:orientation="vertical"
    android:background="#5FFF07"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/texto"
                android:background="@drawable/encabezado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VAMOS APRENDER LOS NÃšMEROS"
                android:textAlignment="center"
                android:textSize="40dp"
                android:gravity="center"
                android:fontFamily="@font/fuente"
                android:textColor="@color/black"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/textNum"
                android:background="@drawable/medio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="51 - 60"
                android:textAlignment="center"
                android:textSize="40dp"
                android:gravity="center"
                android:fontFamily="@font/fuente"
                android:textColor="@color/black"
                android:layout_gravity="center"/>

            <LinearLayout
                android:background="@drawable/bordes_redondos5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"

                    >


                    <Button
                        app:cornerRadius="50dp"
                        android:backgroundTint="#8C5707"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="51"
                        android:textSize="30dp"
                        android:id="@+id/num1"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/fuente"
                        android:textColor="@color/white"
                        />

                    <Button
                        app:cornerRadius="50dp"
                        android:backgroundTint="#8C5707"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="52"
                        android:textSize="30dp"
                        android:id="@+id/num2"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/fuente"
                        android:textColor="@color/white"
                        />

                    <Button
                        app:cornerRadius="50dp"
                        android:backgroundTint="#8C5707"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="53"
                        android:textSize="30dp"
                        android:id="@+id/num3"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="2dp"
                        android:fontFamily="@font/fuente"
                        android:textColor="@color/white"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:gravity="center">


                    <Button
                        app:cornerRadius="50dp"
                        android:backgroundTint="#8C5707"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="54"
                        android:textSize="30dp"
                        android:id="@+id/num4"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/fuente"
                        android:textColor="@color/white"
                        />

                    <Button
                        app:cornerRadius="50dp"
                        android:backgroundTint="#8C5707"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="55"
                        android:textSize="30dp"
                        android:id="@+id/num5"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/fuente"
                        android:textColor="@color/white"
                        />

                    <Button
                        app:cornerRadius="50dp"
                        android:backgroundTint="#8C5707"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="56"
                        android:textSize="30dp"
                        android:id="@+id/num6"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="2dp"
                        android:fontFamily="@font/fuente"
                        android:textColor="@color/white"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:gravity="center">


                    <Button
                        app:cornerRadius="50dp"
                        android:backgroundTint="#8C5707"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="57"
                        android:textSize="30dp"
                        android:id="@+id/num7"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/fuente"
                        android:textColor="@color/white"
                        />

                    <Button
                        app:cornerRadius="50dp"
                        android:backgroundTint="#8C5707"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="58"
                        android:textSize="30dp"
                        android:id="@+id/num8"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/fuente"
                        android:textColor="@color/white"
                        />

                    <Button
                        app:cornerRadius="50dp"
                        android:backgroundTint="#8C5707"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="59"
                        android:textSize="30dp"
                        android:id="@+id/num9"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="2dp"
                        android:fontFamily="@font/fuente"
                        android:textColor="@color/white"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        app:cornerRadius="50dp"
                        android:backgroundTint="#8C5707"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="60"
                        android:textSize="30dp"
                        android:id="@+id/num10"
                        android:fontFamily="@font/fuente"
                        android:textColor="@color/white"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        app:cornerRadius="50dp"
                        android:backgroundTint="#05780B"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnRegresar"
                        android:text="regresar"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/quieri"
                        android:textColor="@color/white"
                        />

                    <Button
                        app:cornerRadius="50dp"
                        android:backgroundTint="#0040FF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnPasar"
                        android:text="siguiente"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/quieri"
                        android:textColor="@color/white"
                        />

                </LinearLayout>




            </LinearLayout>

