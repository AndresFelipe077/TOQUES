<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="apps.educacion.numeros.splashScreen"
    android:orientation="vertical"
    android:background="@drawable/imagesplash">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="210dp"
                android:layout_height="210dp"
                android:src="@mipmap/imagepro"
                app:civ_border_width="3dp"
                app:civ_border_color="#37F800"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="30sp"
                android:fontFamily="@font/fuente"
                android:text="@string/textSplash"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>